extends layout 

block content
    .principal-content
        h1 #{title}

        if errors
            each error in errors 
                .alerta(class="error")= error.text

        form.add-project(action="/new-project" method="POST")
            .form-field
                label(for="name") Name Project:
                input(type="text" id="name" name="name" placeholder="add name...")
            .send-button
                input(type="submit" value="Add" class="button")
            